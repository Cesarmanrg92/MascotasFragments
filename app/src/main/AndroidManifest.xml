<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cesarandroid.mascotasandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListaMascotaActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MascotasFavoritasActivity"
            android:label="@string/title_activity_mascotas_favoritas"
            android:parentActivityName=".ListaMascotaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ContactoActivity" />
        <activity android:name=".AcercaActivity"></activity>
    </application>

</manifest>
